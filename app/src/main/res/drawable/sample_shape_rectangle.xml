<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 形状：rectangle/oval/line/ring -->
    <!-- shape为ling或ring时必须指定stroke -->
    <!-- dashWidth与dashGap分别指虚线的实线和空隙宽度 -->
    <stroke
        android:width="1dp"
        android:color="@color/colorAccent"
        android:dashWidth="10dp"
        android:dashGap="4dp"/>

    <!-- 纯色填充 -->
    <!-- solid与gradient冲突，只取放在后面那个标签体的效果 -->
    <solid android:color="@color/colorPrimary" />

    <gradient
        android:angle="45"
        android:centerX="100dp"
        android:centerY="100dp"
        android:startColor="@color/colorAccent"
        android:endColor="@color/colorPrimaryDark"
        android:centerColor="#fff"
        android:type="linear"
        android:gradientRadius="5dp"
        />

    <padding
        android:top="@dimen/activity_horizontal_margin"
        android:left="@dimen/activity_horizontal_margin"
        android:right="@dimen/activity_horizontal_margin"
        android:bottom="@dimen/activity_horizontal_margin" />
</shape>